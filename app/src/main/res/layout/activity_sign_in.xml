<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="100dp"
        tools:context=".SignInActivity">

    <EditText android:id="@+id/signInMailInputView" android:layout_width="match_parent" android:layout_height="60dp" android:hint="email"/>
    <EditText android:id="@+id/signPasswordInputView" android:layout_width="match_parent" android:layout_height="60dp" android:hint="password"/>
    <Button  android:id="@+id/signInBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="SignIn"/>
</LinearLayout>